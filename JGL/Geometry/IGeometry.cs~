using System;
using System.Collections.Generic;

namespace JGL.Geometry
{
	/// <summary>
	/// Describes a collection of geometry primitives (used by <see cref="Mesh"/>, currently)
	/// </summary>
	public interface IGeometry
	{
		IList<Vertex> Vertices { get; }

		/// <summary>
		/// The normals.
		/// </summary>
		IList<Normal> Normals { get; }

		/// <summary>
		/// The tex coords.
		/// </summary>
		IList<TexCoord> TexCoords { get; }

		/// <summary>
		/// The texture.
		/// </summary>
		MaterialLibrary Materials { get; }
	}
}

