using System;

namespace JGL.Extensions
{
	/// <summary>
	/// <see cref="System.Object"/> extension methods
	/// </summary>
	public static class Object_Ext
	{
		/// <summary>
		/// Determines whether this instance's <see cref="Type"/> is of the specified <see cref="Type"/> <paramref name="typeOf"/>
		/// </summary>
		/// <returns>
		/// <c>true</c> if this instance's <see cref="Type"/> is of the specified <see cref="Type"/> <paramref name="typeOf"/>; otherwise, <c>false</c>.
		/// </returns>
		/// <param name="obj">If set to <c>true</c> object</param>
		/// <param name="typeOf">If set to <c>true</c> type of</param>
		public static bool IsTypeOf(this Object obj, Type typeOf)
		{
			return obj.GetType().IsTypeOf(typeOf);
		}
	}
}